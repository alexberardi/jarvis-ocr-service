# =============================================================================
# jarvis-ocr-service - Environment Template
# =============================================================================
# Copy to .env and fill in values
# Port: 7031
# =============================================================================

# Service URLs are resolved automatically from jarvis-config-service

# -----------------------------------------------------------------------------
# SERVER
# -----------------------------------------------------------------------------
OCR_PORT=7031
OCR_LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# OCR PROVIDERS (enable as needed)
# -----------------------------------------------------------------------------
# Tesseract is always available (default)

# EasyOCR (Python-based, GPU-accelerated)
OCR_ENABLE_EASYOCR=false

# PaddleOCR (Python-based, good for Asian languages)
OCR_ENABLE_PADDLEOCR=false

# RapidOCR (ONNX Runtime-based, lightweight alternative to PaddleOCR)
OCR_ENABLE_RAPIDOCR=false

# Apple Vision (macOS only)
OCR_ENABLE_APPLE_VISION=false

# LLM-based OCR via jarvis-llm-proxy (local vision model)
OCR_ENABLE_LLM_PROXY_VISION=false

# LLM-based OCR via cloud (OpenAI, etc.)
OCR_ENABLE_LLM_PROXY_CLOUD=false

# Tier order (comma-separated, first = highest priority)
OCR_ENABLED_TIERS=tesseract,easyocr,paddleocr,rapidocr,apple_vision,llm_local,llm_cloud

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------
# This service's credentials
JARVIS_APP_ID=jarvis-ocr
JARVIS_APP_KEY=CHANGE_ME_get_from_jarvis_auth_admin

# Cache TTL for auth validation
JARVIS_APP_AUTH_CACHE_TTL_SECONDS=60

# -----------------------------------------------------------------------------
# REDIS (for job queue)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# SERVICE DISCOVERY
# -----------------------------------------------------------------------------
JARVIS_CONFIG_URL=http://localhost:7700

# -----------------------------------------------------------------------------
# OCR LIMITS
# -----------------------------------------------------------------------------
OCR_MAX_TEXT_BYTES=51200
OCR_MIN_VALID_CHARS=3
OCR_LANGUAGE_DEFAULT=en
OCR_MAX_ATTEMPTS=3
OCR_VALIDATION_MODEL=lightweight

# -----------------------------------------------------------------------------
# S3/MINIO (for image storage)
# -----------------------------------------------------------------------------
S3_ENDPOINT_URL=http://localhost:9000
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
